<!-- OrderSummary Page for Resturant -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Mocha and Chai</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap"
      rel="stylesheet"
    />

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" /> -->
    <!-- <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" /> -->
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/restaurantowner.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/routes/resturantPage.js"></script>

  </head>

  <body>

    <nav>
      <div class="content-left">
        <img src="/images/coffee-beans.png" class="logo" />
        <div class="title">
          <span>Mocha </span>
          <span>& Chai</span>
        </div>
      </div>
    </nav>

  <div class="header-image">
     <img src="/images/coffee.png" />
  </div>

  <div class="main-container">
      <div class="OrderSummary">
        <h6>Order # <%= dataArray[0].orders_id %></h6>
        <span class="text-muted"> Date : 2021-11-28</span>

        <div>
          <br>
          <h7 class="bold">Order:</h7>

      </div>
        <% dataArray.forEach( (item)=>{     %>
        <div class="OrderItems">
            <tr><td><%=item.line_id%></td><td>  </td><td><%=item.product_name%></td></tr>
        </div>
        <% } ); %>
            <br>
            <h7 class="mb-3"> Order Total: <span class="small text-muted"> <%=dataArray[0].total%> </span></h7>
        </div>

      <div class="CustomerSummary">
            <h6><%=dataArray[0].first_name%><%=dataArray[0].last_name%></h6>
            <h7 class="text-muted"> <%=dataArray[0].phone_no%></h7>
            <p class="text-muted"> <%=dataArray[0].email%></p>
      </div>

      <div class="AcceptReject">
          <div class="Accept">
            <!-- Accept Button -->
            <button type="submit" id="acceptbutton" class="btn btn-primary btn-block">Accept</button>
          </div>
          <div class="Reject">
            <!-- Reject Button -->
            <button type="submit" id="rejectbutton" class="btn btn-primary btn-block">Reject</button>
          </div>
      </div>

      <div class="EstimatedTime">
        <label> Estimated Prep time: </label>
        <input type="estimatedtime" name="estimatedtime" class="form-control" />
      </div>
    </div>
    <div class="page_end">
      <img class="footer-img" src="/images/latte-three.jpeg" />
      <footer><span>Â© 2021 by Mocha + Chai. All rights reserved.</sp></footer>
    </div>
</body>
</html>
